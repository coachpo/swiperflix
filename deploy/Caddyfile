:80 {
    # Gateway API - proxy /api/* requests to FastAPI gateway
    handle /api/* {
        reverse_proxy gateway:8000
    }

    # Health check endpoint - hits gateway
    handle /health {
        reverse_proxy gateway:8000
    }

    # Player frontend - catch-all
    handle /* {
        reverse_proxy player:3000
    }

    # Enable compression
    encode gzip

    # Security headers (HTTP version)
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}
